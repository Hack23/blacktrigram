{
  "name": "game-app",
  "private": true,
  "version": "0.2.5",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "check": "tsc -b",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "vitest run --reporter=verbose",
    "test:systems": "vitest run src/systems",
    "test:systems:watch": "vitest src/systems",
    "test:systems:ui": "vitest --ui src/systems",
    "test:systems:coverage": "vitest run --coverage src/systems",
    "coverage": "vitest run --coverage --coverage.reportOnFailure --reporter=verbose",
    "test:ci": "vitest run --coverage --reporter=junit --outputFile=coverage/junit.xml",
    "test:e2e": "mkdir -p cypress/results && start-server-and-test dev http://localhost:5173 'cypress run --reporter cypress-multi-reporters --reporter-options configFile=cypress.config.reporter.json'",
    "test:e2e:ci": "mkdir -p cypress/results && start-server-and-test dev http://localhost:5173 'cypress run --headless --reporter cypress-multi-reporters --reporter-options configFile=cypress.config.reporter.json'"
  },
  "dependencies": {
    "@pixi/react": "^8.0.2",
    "howler": "^2.2.4",
    "pixi.js": "^8.10.0",
    "@pixi/sound": "^6.0.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-error-boundary": "^6.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/howler": "^2.2.12",
    "@types/react": "^19.1.6",
    "@types/react-dom": "^19.1.6",
    "@typescript-eslint/eslint-plugin": "^8.33.0",
    "@typescript-eslint/parser": "^8.33.0",
    "@vitejs/plugin-react": "^4.5.1",
    "@vitest/coverage-v8": "^3.2.1",
    "@vitest/ui": "^3.2.2",
    "cypress": "^14.4.1",
    "cypress-junit-reporter": "^1.3.1",
    "cypress-multi-reporters": "^2.0.5",
    "eslint": "^9.28.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.2.0",
    "jsdom": "^26.1.0",
    "start-server-and-test": "^2.0.12",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.33.0",
    "vite": "^6.3.5",
    "vitest": "^3.2.1",
    "vite-tsconfig-paths": "^5.1.4",
    "@types/fs-extra": "11.0.4",
    "@types/node": "22.15.29",
    "@types/testing-library__jest-dom": "5.14.9",
    "@vitest/coverage-istanbul": "3.2.1"
  }
}

{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true, // Changed from false to true
    "jsx": "react-jsx", // Or "preserve" if your bundler handles JSX transformation

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "exactOptionalPropertyTypes": false, // Changed from true or default
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    /* Composite */
    "composite": true, // Add or ensure this is true if referenced projects disable emit
    "declaration": true, // Often used with composite
    "declarationMap": true, // Often used with composite
    "sourceMap": true, // Often used with composite
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.tsbuildinfo",

    "allowJs": true, // Allow JavaScript files to be compiled

    /* Vitest */
    "types": ["node", "vitest/globals"] // Add vitest/globals for vi namespace
  },
  "include": [
    "src",
    "vite.config.ts",
    "vitest.config.ts",
    "src/types/pixi-react.d.ts"
  ]
}
